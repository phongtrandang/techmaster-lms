<div class="col-md-6 col-md-offset-3">
  <h2>Login</h2>
  <%= form_tag({controller: 'sessions', action: "create"}, method: :post) do %>

      <%= label_tag :email %>
      <%= text_field_tag :email, nil, class: 'form-control', placeholder: 'Enter your email' %>

      <%= label_tag :password %>
      <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Enter your password' %>

      <br />
      <%= submit_tag "Create" %>

  <% end %>
</div>